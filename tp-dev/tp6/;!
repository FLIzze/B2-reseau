import asyncio
import aioconsole

host = "10.33.79.112"
port = 6969

class Client:
    def __init__(self, reader, writer):
        self.reader = reader 
        self.writer = writer 

async def connect():
    reader, writer = await asyncio.open_connection(host, port)
    return reader, writer

async def async_input():
    while True:
        input_client = await aioconsole.ainput()
        client.writer.write(input_client.encode('utf-8'))
        await client.writer.drain()

async def async_receive():
    while True:
        data_from_server = await client.reader.read(1024)
        print(data_from_server.decode())

async def main():
    client = Client(reader, writer)
    await asyncio.gather(connect(), async_input(), async_receive())

if __name__ == "__main__"
asyncio.run(main())
